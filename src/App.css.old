
.App-title {
	text-align: center;
}


.board {
	text-align: center;
	width: 604px;
	height: 604px;
	padding: 5px;
	border-style: solid;
	border-radius: 15px;
	border-width: medium;
	background-color: black;
	display: inline-block;
}

.board-fill {
	width: calc((100% - 604px) / 2);
	display: inline-block;
}



.config {
	text-align: center;
	width: 406px;
	border-style: solid;
	border-radius: 15px;
	border-width: medium;
	display: inline-block;
}

.config-fill {
	width: calc((100% - 406px) / 2);
	display: inline-block;
}

.config-title {
}

.rad-div {
	width: 176px;
	font-size: 22pt;
	display: inline-block;
}

.ch-div {
	width: 400px;
	font-size: 22pt;
	display: inline-block;
}

.but-div {
	width: 360px;
	height: 38px;
	margin-top: 10px;
	margin-bottom: 10px;
	font-size: 22pt;
